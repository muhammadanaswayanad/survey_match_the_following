<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Add match question type to form view -->
    <record id="survey_question_form_extend" model="ir.ui.view">
        <field name="name">survey.question.form.match</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='options']" position="after">
                <page string="Match Pairs" name="match_options" invisible="question_type != 'match'">
                    <field name="match_pair_ids">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="left_text"/>
                            <field name="right_text"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Create a standalone template for our match question content -->
    <template id="survey_match_question_content" name="Survey: Match Question">
        <div class="match_question_container mt-3" t-att-data-question-id="question.id">
            <div class="row">
                <div class="col-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Left</th>
                                <th>Right (Dropdown)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="question.match_pair_ids" t-as="pair">
                                <tr>
                                    <td class="align-middle"><t t-esc="pair.left_text"/></td>
                                    <td>
                                        <select t-att-name="'answer_%s_%s' % (question.id, pair.id)" 
                                                t-att-data-left-id="pair.id"
                                                class="form-select match-dropdown"
                                                required="required">
                                            <option value="">Select an answer</option>
                                            <t t-foreach="question.match_pair_ids.sorted(key=lambda r: r.sequence)" t-as="right_pair">
                                                <option t-att-value="right_pair.id">
                                                    <t t-esc="right_pair.right_text"/>
                                                </option>
                                            </t>
                                        </select>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </template>

    <!-- Create an asset bundle for our match question JavaScript -->
    <template id="assets_frontend" inherit_id="web.assets_frontend">
        <xpath expr="." position="inside">
            <script type="text/javascript">
                odoo.define('survey_match_the_following.question_handling', function (require) {
                    "use strict";
                    var publicWidget = require('web.public.widget');
                    var SurveyFormWidget = publicWidget.registry.SurveyFormWidget;
                    
                    if (SurveyFormWidget) {
                        SurveyFormWidget.include({
                            _getAnswerValues: function () {
                                var result = this._super.apply(this, arguments);
                                
                                // Handle match questions
                                this.$('div.match_question_container').each(function () {
                                    var $matchQuestionEl = $(this);
                                    var questionId = $matchQuestionEl.data('question-id');
                                    
                                    $matchQuestionEl.find('select.match-dropdown').each(function() {
                                        var $select = $(this);
                                        var leftId = $select.data('left-id');
                                        var rightValue = $select.val();
                                        
                                        if (rightValue) {
                                            var inputName = 'answer_' + questionId + '_' + leftId;
                                            result[inputName] = rightValue;
                                        }
                                    });
                                });
                                
                                return result;
                            }
                        });
                    }
                });
            </script>
        </xpath>
    </template>

    <!-- Add our template to the survey question rendering using a controller -->
    <template id="survey_question_hook" inherit_id="survey.question_container">
        <xpath expr="//div[hasclass('o_survey_question_container')]" position="inside">
            <t t-if="question.question_type == 'match'">
                <t t-call="survey_match_the_following.survey_match_question_content"/>
            </t>
        </xpath>
    </template>
</odoo>
