<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="survey_question_form_match" model="ir.ui.view">
        <field name="name">survey.question.form.match</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='question_type']" position="after">
                <field name="match_correct_pairs_count" invisible="1"/>
            </xpath>
            
            <xpath expr="//notebook" position="inside">
                <page string="Match Pairs" attrs="{'invisible': [('question_type', '!=', 'match')]}">
                    <p class="text-muted">Define the matching pairs for this question. Each left option must match exactly one right option.</p>
                    <field name="match_pair_ids" widget="one2many">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="left_option"/>
                            <field name="right_option"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
