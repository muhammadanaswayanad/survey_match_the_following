<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Update the main form view to add match question type -->
    <record id="survey_question_form_match" model="ir.ui.view">
        <field name="name">survey.question.form.match</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form"/>
        <field name="arch" type="xml">
            <!-- Add match question type to the selection field -->
            <field name="question_type" position="attributes">
                <attribute name="options">{'no_create': True, 'no_open': True}</attribute>
            </field>
            
            <!-- Add match pairs page -->
            <xpath expr="//notebook" position="inside">
                <page string="Match Pairs" name="match_pairs_page" invisible="question_type != 'match'">
                    <field name="match_pair_ids">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="left_option"/>
                            <field name="right_option"/>
                        </tree>
                    </field>
                    <div class="alert alert-info mt-3" role="alert">
                        <p>
                            <i class="fa fa-info-circle"/> Add pairs of items to match. 
                            Each left option can only be matched with one right option.
                        </p>
                    </div>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
