<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="survey_question_form_match_type" model="ir.ui.view">
        <field name="name">survey.question.form.inherit.match.type</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form_edit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='match_pair_ids']" position="replace">
                <field name="match_pair_ids" widget="one2many" attrs="{'invisible': [('question_type', '!=', 'match')]}">
                    <tree editable="bottom">
                        <field name="sequence" widget="handle"/>
                        <field name="left_option"/>
                        <field name="right_option"/>
                    </tree>
                </field>
                <div class="alert alert-info mt-3" role="alert" attrs="{'invisible': [('question_type', '!=', 'match')]}">
                    <p>
                        <i class="fa fa-info-circle"/> Add pairs of items to match. 
                        Each left option can only be matched with one right option.
                    </p>
                </div>
            </xpath>
        </field>
    </record>
    <!-- Extend the form view to show match details in survey analysis -->
    <record id="survey_survey_view_form_match" model="ir.ui.view">
        <field name="name">survey.survey.view.form.match</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_survey_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='question_ids']/tree/field[@name='question_type']" position="attributes">
                <attribute name="decoration-info" add="question_type == 'match'"/>
            </xpath>
        </field>
    </record>
    <!-- We're not inheriting from survey_question_form_edit as it doesn't exist in Odoo 17 -->
    <!-- Instead, we'll modify the question templates when rendering the survey -->
    <template id="question_match_template" inherit_id="survey.question">
        <xpath expr="//div[hasclass('js_question-wrapper')]" position="attributes">
            <attribute name="t-att-data-question-type">question.question_type</attribute>
        </xpath>
        <xpath expr="//div[hasclass('js_question-wrapper')]/div" position="inside">
            <t t-if="question.question_type == 'match'">
                <div class="match_question_container" t-att-data-question-id="question.id">
                    <div class="match-pairs-container">
                        <!-- The pairs will be dynamically populated by JavaScript -->
                    </div>
                    <input type="hidden" name="match_result" class="match_result" />
                </div>
            </t>
        </xpath>
    </template>
</odoo>
