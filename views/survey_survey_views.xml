<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit from the proper question template in Odoo 17 -->
    <template id="question_match_template" inherit_id="survey.question_common">
        <xpath expr="//div[hasclass('o_survey_question_content')]" position="inside">
            <t t-if="question.question_type == 'match'">
                <div class="match_question_container mt-3" t-att-data-question-id="question.id">
                    <div class="match-pairs-container">
                        <!-- The pairs will be dynamically populated by JavaScript -->
                    </div>
                    <input type="hidden" name="match_result" class="match_result"/>
                </div>
            </t>
        </xpath>
    </template>
    
    <!-- Also provide a template for displaying results -->
    <template id="question_match_result" inherit_id="survey.question_result">
        <xpath expr="//t[@t-if='question.question_type in [\"textbox\", \"char_box\"]']" position="after">
            <t t-if="question.question_type == 'match'">
                <div class="match_question_result_container" t-att-data-question-id="question.id">
                    <!-- Result display logic will be added here -->
                </div>
            </t>
        </xpath>
    </template>
</odoo>
